n=int (input ())
if (n>= 500 and n<1000):
    print ('Скидка 10% c вас', (n-n/100*10))
elif (n >= 1000 and n<2000):
    print ('скидка 20% c вас', (n-n/100*20))
elif (n >= 2000 and n <3000 ):
    print ('cкидка 30% с вас', (n-n/100*30))
elif (n >= 3000 and n <4000 ):
    print ('скидка 40% c вас', (n-n/100*40))
elif (n >= 4000 and n <5000 ):
    print ('cкидка 50% с вас', (n-n/100*50))
elif (n >= 5000 and n <6000 ):
    print ('Торт в подарок')
